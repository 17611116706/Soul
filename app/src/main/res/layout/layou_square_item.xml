<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_photoSquare"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_square_age"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/shape_star_1"
                        android:gravity="center"
                        android:padding="@dimen/dp_3"
                        android:text="21å²"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_square_constellation"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/shape_star_2"
                        android:gravity="center"
                        android:padding="@dimen/dp_3"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_8"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_square_hobby"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/shape_star_3"
                        android:gravity="center"
                        android:padding="@dimen/dp_3"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_square_status"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/shape_star_4"
                        android:gravity="center"
                        android:padding="@dimen/dp_3"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_8" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_music"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="5dp"
            android:background="@drawable/shape_square_music_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp_8"
                android:src="@drawable/img_music_audio_icon" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="visible">

            <com.wyy.framework.view.VideoJzvdStd
                android:id="@+id/jz_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>